#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter number of rows : ";
    cin>>n;
    int m = n-1;
    for(int i=1;i<=m;i++){
        for(int q=1;q<=m+1-i;q++){
            cout<<"*";
        }
        //spaces
        for(int j=1;j<=2*i-1;j++){
            cout<<" ";
        }
        //stars
        for(int s=1;s<=m+1-i;s++){
            cout<<"*";
        }
        cout<<endl;
    }
}
